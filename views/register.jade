extends layout
block content
    br
    h1 Register
    br
    ul.errors
        if errors
            each error,i in errors
                li.alert.alert-danger #{error.msg}
    form(method="post",action='/users/register',enctype='multipart/form-data')
        .form-group
            label Name
            input.form-control(type="text",name='name',placeholder='Enter Name')
        .form-group
            label Email
            input.form-control(type="email",name='email',placeholder='Enter Email')
        .form-group
            label Username
            input.form-control(type="text",name='username',placeholder='Username')
        .form-group
            label Team
            input.form-control(type="text",name='team',placeholder='Enter Team')
        .form-group
            label Password
            input.form-control(type="password",name='password',placeholder='Enter Password')
        .form-group
            label Confirm Password
            input.form-control(type="password",name='password2',placeholder='Re-enter Password')   
        .form-group
            label Profile Image
            input.form-control(type="file",name='profileimage') 
        input.btn(type="submit",name='submit',value='Register')
        